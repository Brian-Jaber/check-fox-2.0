{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "src",
    "vite.config.js",
    "server",
    "utilities/passwordUtils/registerUserRoute.ts",
    "__tests__/src/Components/LandingPage.test.tsx",
    "__tests__/src/Components/Dashboard.test.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
